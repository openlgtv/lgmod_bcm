#!/bin/sh
# OpenLGTV BCM script rc.mount-netshare
# Network Share Mounting Script for LG Broadcom platform based TVs by xeros
# Source code released under GPL License

# USB testing code for WebUI executed script
USB1_DIR=/mnt/usb1/Drive1
USB2_DIR=/mnt/usb2/Drive1
if [ "$USB_DIR" = "" -o "$OpenLGTV_BCM_USB" = "" ]
then
    if [ -d "$USB2_DIR/OpenLGTV_BCM" ]
    then
	export USB_DIR=$USB2_DIR
	export OpenLGTV_BCM_USB=$USB2_DIR/OpenLGTV_BCM
    else
	export USB_DIR=$USB1_DIR
	export OpenLGTV_BCM_USB=$USB1_DIR/OpenLGTV_BCM
    fi
fi

if [ "$1" = "WebUI_MOUNT" ]
then
    WebUI_MOUNT=1
fi

if [ -f "/mnt/user/cfg/ndrvtab" -a -d "$OpenLGTV_BCM_USB" ]
then
    echo "OpenLGTV_BCM-INFO: found Network Share configuration file /mnt/user/cfg/ndrvtab and mounted USB stick - parsing config content..." | tee -a $bootlogf
    #cat /mnt/user/cfg/ndrvtab | while read ndrv < /mnt/user/cfg/ndrvtab
    #while read ndrv < /mnt/user/cfg/ndrvtab
    #cat /mnt/user/cfg/ndrvtab | read ndrv
    ndrv="`cat /mnt/user/cfg/ndrvtab`"
    #do
	automount=`echo $ndrv | awk -F# '{print $1}'`
	fs_type=`echo $ndrv | awk -F# '{print $2}'`
	src=`echo $ndrv | awk -F# '{print $3}'`
	dst=`echo $ndrv | awk -F# '{print $4}'`
	opt=`echo $ndrv | awk -F# '{print $5}'`
	uname=`echo $ndrv | awk -F# '{print $6}'`
	pass=`echo $ndrv | awk -F# '{print $7}'`
	passHidden="*password*"
	#mntstat=`mount | grep "$src.*$dst"`
    ##echo ndrv: $automount $fs_type $src $dst $opt $uname $pass
    #done
    echo "OpenLGTV_BCM-DEBUG: Network Share settings: automount=$automount fs_type=$fs_type src=$src dst=$dst opt=$opt uname=$uname pass=$passHidden ..." | tee -a $bootlogf
    if [ "$automount" = "1" -o "$WebUI_MOUNT" = "1" ]
    then
	if [ ! -d "$USB_DIR/NetShare" ]
	then
	    mkdir -p "$USB_DIR/NetShare"              2>&1 | tee -a $bootlogf
	fi
	/bin/date +"OpenLGTV_BCM-TIME: %F %T script: $0"   | tee -a $bootlogf
	if [ "$fs_type" = "cifs" ]
	then
	    if [ "`grep ^cifs /proc/modules`" = "" ]
	    then
		if [ -f "/mnt/user/modules/cifs.ko" ]
		then
		    echo "OpenLGTV_BCM-INFO: loading CIFS kernel module: /mnt/user/modules/cifs.ko..." | tee -a $bootlogf
		    insmod /mnt/user/modules/cifs.ko                                              2>&1 | tee -a $bootlogf
		else
		    echo "OpenLGTV_BCM-WARN: CIFS kernel module NOT FOUND in location: /mnt/user/modules/cifs.ko and module is not loaded... trying to mount CIFS without it" | tee -a $bootlogf
		fi
	    fi
	    if [ "$WebUI_MOUNT" = "1" ]
	    then
		echo "OpenLGTV_BCM-INFO: mounting CIFS Network Share in foreground by WebUI..."        | tee -a $bootlogf
		mount -t cifs $src "$USB_DIR/NetShare" -o username=$uname,password=$pass,nounix,noserverino  >> $bootlogf 2>&1
		export mount_err_code="$?"
	    else
		echo "OpenLGTV_BCM-INFO: mounting CIFS Network Share in background..."                 | tee -a $bootlogf
		mount -t cifs $src "$USB_DIR/NetShare" -o username=$uname,password=$pass,nounix,noserverino &
	    fi
	else
	    if [ "$WebUI_MOUNT" = "1" ]
	    then
		echo "OpenLGTV_BCM-INFO: mounting NFS Network Share in foreground by WebUI..."         | tee -a $bootlogf
		mount -t nfs $src "$USB_DIR/NetShare" -o nolock,rsize=32768,wsize=32768,tcp                  >> $bootlogf 2>&1
		export mount_err_code="$?"
	    else
		echo "OpenLGTV_BCM-INFO: mounting NFS Network Share in background..."                  | tee -a $bootlogf
		mount -t nfs $src "$USB_DIR/NetShare" -o nolock,rsize=32768,wsize=32768,tcp &
	    fi
	fi
	/bin/date +"OpenLGTV_BCM-TIME: %F %T script: $0"                                               | tee -a $bootlogf
	if [ "$WebUI_MOUNT" = "1" -a "$mount_err_code" -ne "0" ]
	then
	    echo "OpenLGTV_BCM-ERROR: mounting network share have not succeeded - check yours share configuration..." | tee -a $bootlogf
	    exit $mount_err_code
	else
	    echo "OpenLGTV_BCM-INFO: running recursive listing of network share dir in background to have all files and dirs visible by RELEASE..." | tee -a $bootlogf
	    #$(sleep 10; echo nice -n 20 ls -alR "$USB_DIR/NetShare") > /dev/null 2>&1 &
	    $(sleep 10; echo nice -n 20 ls -aR "$USB_DIR/NetShare") > /dev/null 2>&1 &
	fi
    fi
else
    echo "OpenLGTV_BCM-INFO: NOT found Network Share configuration file /mnt/user/cfg/ndrvtab or mounted USB stick with OpenLGTV_BCM dir - skipping network share configuration..." | tee -a $bootlogf
fi
